{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./build/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/renderer/views/Counter/Time.tsx",
    "cypress/**/*.ts", "cypress.d.ts", "src/renderer/cypress/support/cypress.d.ts", "cypress.d.ts", "cypress/support/components.tsx"],
  "exclude": ["node_modules"]
}
